FROM node:alpine AS build
RUN mkdir /app
WORKDIR /app/
COPY ./../ ./
RUN npm i
RUN npm run build
FROM node:alpine
WORKDIR /app/
COPY --from=build /app/build /app/build
COPY --from=build /app/src/certs/ /app/certs
EXPOSE 443
RUN npm i serve
CMD npx serve -p 443 -s build 
#--ssl-cert ./certs/cert-vault-fp-https-secure-20231119.pfx
